<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:orientation="vertical"
    tools:context=".AddEventActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_ae_tanggal_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tanggal_event" />

            <TextView

                android:id="@+id/tv_ae_tanggal_event_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:ems="10"
                android:textColor="?attr/editTextColor"
                android:background="?attr/editTextBackground"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:hint="@string/pilih_tanggal" />

            <TextView
                android:id="@+id/tv_ae_themes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tema_acara" />

            <EditText
                android:id="@+id/et_ae_themes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/input_tema" />

            <TextView
                android:id="@+id/tv_ae_judges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/jumlah_juri" />

            <EditText
                android:id="@+id/et_ae_judges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/input_jumlah_juri" />

            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/btn_ae_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_submit" />
        </LinearLayout>



    </ScrollView>

</LinearLayout>