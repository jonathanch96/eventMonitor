                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:textColor="@color/blue"
                        android:background="@drawable/rectangle_green"
                        android:layout_weight="0.2"/>

                    <EditText
