<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">
    <TextView
        android:id="@+id/tv_amtl_no_urut"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:text="1"
        android:textSize="30dp" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_amtl_team_name"
            android:layout_width="wrap_content"
            android:layout_gravity="bottom"
            android:text="Team 1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_amtl_nilai_bersih"
            android:layout_width="wrap_content"
            android:layout_gravity="bottom"
            android:text="Nilai Bersih : "
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/btn_amtla_penilaian"
                android:backgroundTint="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/btn_penilaian" />
            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/btn_amtla_edit"
                android:backgroundTint="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/btn_edit" />
            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/btn_amtla_delete"
                android:backgroundTint="@color/red"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/btn_delete" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>